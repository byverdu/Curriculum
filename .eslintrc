{
  "parser": "babel-eslint",
  "extends": "airbnb-base/legacy",
  "rules": {
    "indent": [2],
    "comma-dangle": [2, "never"],
    "space-in-parens": [2, "always", { "exceptions": ["()","{}","[]"] } ],
    "computed-property-spacing": [2, "always"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true
  }
}
